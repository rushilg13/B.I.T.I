                            let dt = d.toISOString();
                            dt = dt.substring(0, 16);
                            return dt;
                        }
                        %>
                        <input type="datetime-local" class="form-control" id="inputAddress" name="duedate" value="<%= dateConvert(order.dueDate) %>">
                    </div>
                    <div class="col-md-4">
                        <label for="profile" class="form-label">Customer ID</label>
                        <% if (order.profileID != null) {%>
                        <input type="text" class="form-control" name="profile" id="profile" value="<%= order.profileID %>">
                        <% } else { %>
                        <input type="text" class="form-control" name="profile" id="profile">
                        <% } %>
                    </div>
                    <div class="col-md-3">
                        <label for="inputCity" class="form-label">Payment Method</label>
